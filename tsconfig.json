{
  "angularCompilerOptions": {
    "enableIvy": false,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "fullTemplateTypeCheck": true,
    "enableResourceInlining": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "lib": ["es2016", "dom"]
  },
  "exclude": ["node_modues"]
}
