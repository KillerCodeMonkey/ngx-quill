{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["vitest/globals"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "es2022",
    "strict": true,
    "useDefineForClassFields": false,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ngx-quill/config": ["projects/ngx-quill/config/src/public_api.ts"],
      "ngx-quill": ["projects/ngx-quill/src/public_api.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
